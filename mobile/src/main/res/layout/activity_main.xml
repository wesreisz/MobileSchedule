<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/common_action_bar_splitter"
    tools:context="com.wesleyreisz.mobileschedule.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="San Francisco"
        android:id="@+id/btnShowScheduleSF"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/button_padding"
        android:layout_margin="@dimen/button_padding"
        android:background="#BDC3C7"
        android:textColor="@color/colorText"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="London"
        android:id="@+id/btnShowScheduleLondon"
        android:layout_above="@id/btnShowScheduleSF"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/button_padding"
        android:background="#BDC3C7"
        android:textColor="@color/colorText"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New York"
        android:id="@+id/btnShowScheduleNY"
        android:layout_below="@id/btnShowScheduleSF"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/button_padding"
        android:background="#BDC3C7"
        android:textColor="@color/colorText"
        />

</RelativeLayout>
